<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.RegisterController"
           stylesheets="@register.css">
    <ImageView fitWidth="1550"
               fitHeight="800"
               preserveRatio="false"
               opacity="0.50">
        <Image url="@images/backgroundd.png"/>
    </ImageView>

    <!-- Back Button -->
    <AnchorPane>
        <Button text="â† Back"
                onAction="#handleBack"
                styleClass="btn-back"
                AnchorPane.topAnchor="25"
                AnchorPane.leftAnchor="25"/>
    </AnchorPane>

    <!-- CARD -->
    <VBox alignment="CENTER"
          spacing="16"
          maxWidth="480"
          maxHeight="700"
          styleClass="card">

        <!-- ICON CIRCLE -->
        <StackPane styleClass="icon-circle"
                   minWidth="90"
                   minHeight="90"
                   maxWidth="90"
                   maxHeight="90">
            <ImageView fitWidth="60" fitHeight="60" preserveRatio="true">
                <Image url="@images/clinic logo.png"/>
            </ImageView>
        </StackPane>

        <!-- TITLE -->
        <Label text="Create Account"
               styleClass="title"/>

        <!-- FORM -->
        <VBox spacing="12" alignment="CENTER">

            <TextField fx:id="fullNameField"
                       promptText="Full Name"
                       styleClass="input"/>

            <TextField fx:id="emailField"
                       promptText="Email"
                       styleClass="input"/>

            <TextField fx:id="phoneField"
                       promptText="Phone"
                       styleClass="input"/>

            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           styleClass="input"/>

            <!-- Gender & DOB -->
            <HBox spacing="14" alignment="CENTER">
                <ComboBox fx:id="genderComboBox"
                          promptText="Gender"
                          styleClass="input-small"/>

                <DatePicker fx:id="dobPicker"
                            promptText="Date of Birth"
                            styleClass="input-small"/>
            </HBox>

            <!-- Role -->
            <HBox spacing="30" alignment="CENTER">
                <CheckBox fx:id="patientCheck" text="Patient"/>
                <CheckBox fx:id="doctorCheck" text="Practitioner"/>
            </HBox>

            <!-- Register Button -->
            <Button text="Register"
                    prefHeight="48"
                    prefWidth="360"
                    styleClass="btn-primary"
                    onAction="#handleRegister"/>

            <!-- Login Link -->
            <HBox spacing="5" alignment="CENTER">
                <Label text="Already have an account?"
                       styleClass="hint-text"/>
                <Button text="Login"
                        onAction="#goToLogin"
                        styleClass="link-btn"/>
            </HBox>

        </VBox>
    </VBox>

</StackPane>
