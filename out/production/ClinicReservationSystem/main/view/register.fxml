<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane stylesheets="@register.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
    <ImageView fitHeight="800" fitWidth="1550" opacity="0.50" preserveRatio="false">
        <Image url="@images/backgroundd.png" />
    </ImageView>

    <!-- Back Button -->
    <AnchorPane>
        <Button layoutX="40.0" layoutY="81.0" onAction="#handleBack" prefHeight="48.0" prefWidth="118.0" styleClass="btn-back" text="â† Back" AnchorPane.leftAnchor="40.0" AnchorPane.topAnchor="81.0" />
    </AnchorPane>

    <!-- CARD -->
    <VBox alignment="CENTER" maxHeight="700" maxWidth="480" spacing="16" styleClass="card">

        <!-- ICON CIRCLE -->
        <StackPane maxHeight="90" maxWidth="90" minHeight="90" minWidth="90" styleClass="icon-circle">
            <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                <Image url="@images/clinic logo.png" />
            </ImageView>
        </StackPane>

        <!-- TITLE -->
        <Label styleClass="title" text="Create Account" />

        <!-- FORM -->
        <VBox alignment="CENTER" spacing="12">

            <TextField fx:id="fullNameField" promptText="Full Name" styleClass="input" />

            <TextField fx:id="emailField" promptText="Email" styleClass="input" />

            <TextField fx:id="phoneField" promptText="Phone" styleClass="input" />

            <PasswordField fx:id="passwordField" promptText="Password" styleClass="input" />

            <!-- Gender & DOB -->
            <HBox alignment="CENTER" spacing="14">
                <ComboBox fx:id="genderComboBox" promptText="Gender" styleClass="input-small" />

                <DatePicker fx:id="dobPicker" promptText="Date of Birth" styleClass="input-small" />
            </HBox>

            <!-- Role -->
            <HBox alignment="CENTER" spacing="30">
                <CheckBox fx:id="patientCheck" text="Patient" />
                <CheckBox fx:id="doctorCheck" text="Practitioner" />
            </HBox>

            <!-- Register Button -->
            <Button onAction="#handleRegister" prefHeight="48" prefWidth="360" styleClass="btn-primary" text="Register" />

            <!-- Login Link -->
            <HBox alignment="CENTER" spacing="5">
                <Label styleClass="hint-text" text="Already have an account?" />
                <Button onAction="#goToLogin" styleClass="link-btn" text="Login" />
            </HBox>

        </VBox>
    </VBox>

</StackPane>
