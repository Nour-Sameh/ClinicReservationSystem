<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="636.0" prefWidth="850.0" style="-fx-background-color: #f0f4f3;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PatientController">

    <!-- Top Green Header (Unified with Doctor) -->
    <HBox alignment="CENTER_LEFT" layoutY="0" prefHeight="60.0" prefWidth="850.0" style="-fx-background-color: linear-gradient(to right, #15BF8F, #0C7E5F);">
        <padding>
            <Insets bottom="10" left="20" right="20" top="10" />
        </padding>

        <Label fx:id="patientNameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Welcome, Patient" />
        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="settingsButton" onAction="#handleSettings" prefHeight="41.0" prefWidth="61.0" style="-fx-background-color: white;-fx-text-fill: #0C7E5F; -fx-font-size: 20px; -fx-background-radius: 50; -fx-cursor: hand;" text="⚙" />
    </HBox>

    <!-- Navigation Bar (Exact copy of Doctor style) -->
    <HBox alignment="CENTER" layoutX="23.0" layoutY="60.0" prefHeight="60.0" prefWidth="810.0" spacing="20" style="-fx-background-color: #F5FAF9; -fx-padding: 20; -fx-background-radius: 15;">

        <Button fx:id="searchNavButton" onAction="#handleNavigation" onMouseEntered="#HoverNavButton" onMouseExited="#ResetNavButton" onMousePressed="#PressNavButton" onMouseReleased="#HoverNavButton" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3);                    -fx-text-fill: #444;                    -fx-font-size: 16px;                    -fx-font-weight: bold;                    -fx-padding: 8 20;                    -fx-background-radius: 25;                    -fx-border-radius: 25;                    -fx-border-color: #c8d6d5;                    -fx-border-width: 1;                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);" text="Search" />

        <Button fx:id="appointmentsNavButton" onAction="#handleNavigation" onMouseEntered="#HoverNavButton" onMouseExited="#ResetNavButton" onMousePressed="#PressNavButton" onMouseReleased="#HoverNavButton" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3);                    -fx-text-fill: #444;                    -fx-font-size: 16px;                    -fx-font-weight: bold;                    -fx-padding: 8 20;                    -fx-background-radius: 25;                    -fx-border-radius: 25;                    -fx-border-color: #c8d6d5;                    -fx-border-width: 1;                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);" text="My Appointments" />

        <Button fx:id="waitingListNavButton" onAction="#handleNavigation" onMouseEntered="#HoverNavButton" onMouseExited="#ResetNavButton" onMousePressed="#PressNavButton" onMouseReleased="#HoverNavButton" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3);                    -fx-text-fill: #444;                    -fx-font-size: 16px;                    -fx-font-weight: bold;                    -fx-padding: 8 20;                    -fx-background-radius: 25;                    -fx-border-radius: 25;                    -fx-border-color: #c8d6d5;                    -fx-border-width: 1;                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);" text="Waiting List" />

        <Button fx:id="chatNavButton" onAction="#handleNavigation" onMouseEntered="#HoverNavButton" onMouseExited="#ResetNavButton" onMousePressed="#PressNavButton" onMouseReleased="#HoverNavButton" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3);                    -fx-text-fill: #444;                    -fx-font-size: 16px;                    -fx-font-weight: bold;                    -fx-padding: 8 20;                    -fx-background-radius: 25;                    -fx-border-radius: 25;                    -fx-border-color: #c8d6d5;                    -fx-border-width: 1;                    -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);" text="Chat" />
    </HBox>

    <!-- Main Content -->
    <AnchorPane fx:id="mainContentPane" layoutX="29.0" layoutY="140.0" prefHeight="425.0" prefWidth="788.0">
        <VBox spacing="8">
            <Label prefHeight="24.0" prefWidth="239.0" style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Search for clinics by specialty" />
            <ComboBox fx:id="specialtyCombo" prefWidth="200.0" promptText="All Specialties" />

            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="327.0" prefWidth="239.0">
                <VBox fx:id="clinicsContainer" alignment="TOP_CENTER" spacing="15" style="-fx-padding: 10;" />
            </ScrollPane>
        </VBox>
    </AnchorPane>

    <VBox fx:id="settingsBox" layoutX="50.0" layoutY="150.0" prefHeight="400" prefWidth="550" spacing="15" style="-fx-background-color: white; -fx-border-radius: 12; -fx-background-radius: 12;                  -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" visible="false">
        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="⚙️ Account Settings" />

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Username:" GridPane.rowIndex="0" />
            <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Email:" GridPane.rowIndex="2" />
            <TextField fx:id="emailField" editable="false" opacity="0.7" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Phone:" GridPane.rowIndex="3" />
            <TextField fx:id="phoneField" editable="false" opacity="0.7" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Gender:" GridPane.rowIndex="4" />
            <TextField fx:id="genderField" editable="false" opacity="0.7" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Date of Birth:" GridPane.rowIndex="5" />
            <TextField fx:id="dobField" editable="false" opacity="0.7" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label style="-fx-font-weight: bold;" text="Change Password:" GridPane.columnSpan="1" GridPane.rowIndex="6" />

            <Label text="Current Password:" GridPane.rowIndex="7" />
            <PasswordField fx:id="currentPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

            <Label text="New Password:" GridPane.rowIndex="8" />
            <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

            <Label text="Confirm Password:" GridPane.rowIndex="9" />
            <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="9" />
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10" VBox.vgrow="ALWAYS">
            <Button onAction="#handleSettingsCancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 5 15;" text="Cancel" />
            <Button onAction="#handleSettingsSave" style="-fx-background-color: #15BF8F; -fx-text-fill: white; -fx-padding: 5 15;" text="Save Changes" />
        </HBox>
    </VBox>

    <!-- Unified Logout Button (Bottom-Right Corner) -->
    <Button fx:id="logoutButton" layoutX="677.0" layoutY="574.0" onAction="#handleLogout" onMouseEntered="#HoverLogoutButton" onMouseExited="#ResetLogoutButton" prefHeight="40.0" prefWidth="136.0" style="-fx-background-color: #0C7E5F;                    -fx-text-fill: white;                    -fx-font-size: 16px;                    -fx-font-weight: bold;                    -fx-background-radius: 25;                    -fx-border-radius: 25;                    -fx-padding: 10 25;                    -fx-cursor: hand;" text="Logout" />

</AnchorPane>
