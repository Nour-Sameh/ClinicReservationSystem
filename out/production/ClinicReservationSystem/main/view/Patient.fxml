<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<AnchorPane style="-fx-background-color: #f0f4f3;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PatientController">
    <ImageView fitWidth="1550"
               fitHeight="800"
               preserveRatio="false"
               opacity="0.50">
    </ImageView>
    <!-- Top Green Header -->
    <HBox fx:id="headerBox" prefHeight="60.0" style="-fx-background-color: linear-gradient(to right, #15BF8F, #0C7E5F);" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <padding>
            <Insets bottom="10" left="20" right="20" top="10" />
        </padding>
        <Label fx:id="patientNameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Welcome, Patient" />
        <Region HBox.hgrow="ALWAYS" />

        <Button fx:id="logoutButton"
                onAction="#handleLogout"
                onMouseEntered="#hoverLogoutButton"
                onMouseExited="#resetLogoutButton"
                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 25; -fx-border-radius: 25; -fx-padding: 10 25; -fx-cursor: hand; -fx-border-color: white; -fx-border-width: 2;"
                text="Logout">
            <HBox.margin>
                <Insets right="10" />
            </HBox.margin>
        </Button>
        <Button fx:id="settingsButton" onMouseEntered="#hoverSettingsButton"
                onMouseExited="#resetSettingsButton" onAction="#handleSettings" prefHeight="43.0" prefWidth="64.0" style="-fx-background-color: white;-fx-text-fill: #0C7E5F; -fx-font-size: 20px; -fx-background-radius: 50; -fx-cursor: hand;" text="⚙" />
    </HBox>

    <!-- Navigation Bar -->
        <HBox fx:id="navBar" alignment="CENTER" prefHeight="64.0" prefWidth="600.0" spacing="20" style="-fx-background-color: #F5FAF9; -fx-padding: 20; -fx-background-radius: 15;" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="65">

        <Button fx:id="searchNavButton" onAction="#handleNavigation" onMouseEntered="#HoverNavButton" onMouseExited="#ResetNavButton" onMousePressed="#PressNavButton" onMouseReleased="#HoverNavButton" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3); -fx-text-fill: #444; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #c8d6d5; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);" text="Search" />

        <Button fx:id="appointmentsNavButton" onAction="#handleNavigation" onMouseEntered="#HoverNavButton" onMouseExited="#ResetNavButton" onMousePressed="#PressNavButton" onMouseReleased="#HoverNavButton" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3); -fx-text-fill: #444; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #c8d6d5; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);" text="My Appointments" />

        <Button fx:id="waitingListNavButton" onAction="#handleNavigation" onMouseEntered="#HoverNavButton" onMouseExited="#ResetNavButton" onMousePressed="#PressNavButton" onMouseReleased="#HoverNavButton" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3); -fx-text-fill: #444; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #c8d6d5; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);" text="Waiting List" />

        <Button fx:id="chatNavButton" onAction="#handleNavigation" onMouseEntered="#HoverNavButton" onMouseExited="#ResetNavButton" onMousePressed="#PressNavButton" onMouseReleased="#HoverNavButton" style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3); -fx-text-fill: #444; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #c8d6d5; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);" text="Chat" />
    </HBox>

    <!-- Main Content -->
    <AnchorPane fx:id="mainContentPane" AnchorPane.bottomAnchor="60" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40" AnchorPane.topAnchor="150">
        <!-- Modern Search Section -->
        <VBox spacing="20"
              AnchorPane.topAnchor="0"
              AnchorPane.bottomAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <!-- Title and Filter in one row -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <padding>
                    <Insets top="10" bottom="10" />
                </padding>

                <Label text="Search for clinics by specialty"
                       style="-fx-font-size: 18px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #2d3748;" />

                <ComboBox fx:id="specialtyCombo"
                          prefWidth="240.0"
                          promptText="All Specialties"
                          style="-fx-background-color: white;
                             -fx-border-color: #cbd5e0;
                             -fx-border-radius: 8;
                             -fx-background-radius: 8;
                             -fx-padding: 8 12;
                             -fx-font-size: 14px;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 4, 0, 0, 1);" />
            </HBox>

            <!-- Clinics List Container -->
            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" hbarPolicy="NEVER"
                        style="-fx-background-color: transparent;">
                <VBox fx:id="clinicsContainer"
                      spacing="16"
                      style="-fx-padding: 20;
                         -fx-background-color: white;
                         -fx-border-radius: 12;
                         -fx-background-radius: 12;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" />
            </ScrollPane>
        </VBox>
    </AnchorPane>
    <ScrollPane fx:id="settingsScrollPane"
                fitToWidth="true"
                prefHeight="585"
                maxHeight="800"
                hbarPolicy="NEVER"
                AnchorPane.topAnchor="150"
                AnchorPane.leftAnchor="100"
                AnchorPane.rightAnchor="100"
                visible="false"
                style="-fx-background-color: transparent; -fx-background: transparent;">
        <content>
            <VBox fx:id="settingsBox"
                  maxWidth="1300"
                  maxHeight="500"
                  spacing="20"
                  style="-fx-background-color: white; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);"
                  alignment="TOP_CENTER">
                <padding><Insets bottom="30" left="40" right="40" top="30" /></padding>

                <!-- Header -->
                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" text="⚙ Account Settings" />
                </HBox>

                <Separator />

                <!-- Account Information Section -->
                <VBox spacing="15" >
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #15BF8F;" text="Account Information" />

                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" minWidth="140" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="300" />
                        </columnConstraints>

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Username:" GridPane.rowIndex="0" />
                        <TextField fx:id="usernameField"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Email:" GridPane.rowIndex="1" />
                        <TextField fx:id="emailField" editable="false"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8; -fx-opacity: 0.8;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Phone:" GridPane.rowIndex="2" />
                        <TextField fx:id="phoneField" editable="false"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8; -fx-opacity: 0.8;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Gender:" GridPane.rowIndex="3" />
                        <TextField fx:id="genderField" editable="false"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8; -fx-opacity: 0.8;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Date of Birth:" GridPane.rowIndex="4" />
                        <TextField fx:id="dobField" editable="false"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8; -fx-opacity: 0.8;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <rowConstraints>
                            <RowConstraints minHeight="40" />
                            <RowConstraints minHeight="40" />
                            <RowConstraints minHeight="40" />
                            <RowConstraints minHeight="40" />
                            <RowConstraints minHeight="40" />
                        </rowConstraints>
                    </GridPane>
                </VBox>

                <Separator />

                <!-- Change Password Section -->
                <VBox spacing="15">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #15BF8F;" text="Change Password" />

                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" minWidth="140" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="300" />
                        </columnConstraints>

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Current Password:" GridPane.rowIndex="0" />
                        <PasswordField fx:id="currentPasswordField"
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="New Password:" GridPane.rowIndex="1" />
                        <PasswordField fx:id="newPasswordField"
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Confirm Password:" GridPane.rowIndex="2" />
                        <PasswordField fx:id="confirmPasswordField"
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <rowConstraints>
                            <RowConstraints minHeight="40" />
                            <RowConstraints minHeight="40" />
                            <RowConstraints minHeight="40" />
                        </rowConstraints>
                    </GridPane>
                </VBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="15">
                    <VBox.margin>
                        <Insets top="10" />
                    </VBox.margin>
                    <Button onAction="#handleSettingsCancel"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 30; -fx-background-radius: 8; -fx-cursor: hand;"
                            text="Cancel" />
                    <Button onAction="#handleSettingsSave"
                            style="-fx-background-color: #15BF8F; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 30; -fx-background-radius: 8; -fx-cursor: hand;"
                            text="Save Changes" />
                </HBox>
            </VBox>
        </content>
    </ScrollPane>

</AnchorPane>
