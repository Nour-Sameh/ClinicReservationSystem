<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<ScrollPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.AddClinicController"
            fitToWidth="true"
            maxHeight="800"
            stylesheets="@addClinic.css"
            styleClass="root-scroll">

    <ImageView fitWidth="1550"
               fitHeight="800"
               preserveRatio="false"
               opacity="0.50">
        <Image url="@images/backgroundd.png"/>
    </ImageView>

    <BorderPane fx:id="contentPane" styleClass="page-root">

        <center>
            <StackPane fx:id="stepsContainer">

                <VBox fx:id="Step1Container"
                      spacing="22"
                      maxWidth="480"
                      styleClass="card">

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Add Your Clinic" styleClass="title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back"
                                fx:id="backButtonStep1"
                                onAction="#handleBackStep1"
                                styleClass="outline-button"/>
                    </HBox>

                    <Label text="Step 1: Select Working Days &amp; Slot Duration"
                           styleClass="section-title"/>

                    <VBox spacing="6">
                        <Label text="Slot Duration (minutes)" styleClass="field-label"/>
                        <TextField fx:id="slotDurationField"
                                   promptText="e.g. 15, 20, 30"
                                   prefWidth="200"
                                   styleClass="text-field"/>
                    </VBox>

                    <Label text="Select Working Days &amp; Times" styleClass="field-label"/>

                    <VBox spacing="12">
                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="day-row">
                            <CheckBox fx:id="satCheck" text="Saturday"/>
                            <Label text="From:"/>
                            <TextField fx:id="satStart" prefWidth="70" promptText="09:00" styleClass="time-field"/>
                            <Label text="To:"/>
                            <TextField fx:id="satEnd" prefWidth="70" promptText="17:00" styleClass="time-field"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="day-row">
                            <CheckBox fx:id="sunCheck" text="Sunday"/>
                            <Label text="From:"/>
                            <TextField fx:id="sunStart" prefWidth="70" promptText="09:00" styleClass="time-field"/>
                            <Label text="To:"/>
                            <TextField fx:id="sunEnd" prefWidth="70" promptText="17:00" styleClass="time-field"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="day-row">
                            <CheckBox fx:id="monCheck" text="Monday"/>
                            <Label text="From:"/>
                            <TextField fx:id="monStart" prefWidth="70" promptText="09:00" styleClass="time-field"/>
                            <Label text="To:"/>
                            <TextField fx:id="monEnd" prefWidth="70" promptText="17:00" styleClass="time-field"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="day-row">
                            <CheckBox fx:id="tueCheck" text="Tuesday"/>
                            <Label text="From:"/>
                            <TextField fx:id="tueStart" prefWidth="70" promptText="09:00" styleClass="time-field"/>
                            <Label text="To:"/>
                            <TextField fx:id="tueEnd" prefWidth="70" promptText="17:00" styleClass="time-field"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="day-row">
                            <CheckBox fx:id="wedCheck" text="Wednesday"/>
                            <Label text="From:"/>
                            <TextField fx:id="wedStart" prefWidth="70" promptText="09:00" styleClass="time-field"/>
                            <Label text="To:"/>
                            <TextField fx:id="wedEnd" prefWidth="70" promptText="17:00" styleClass="time-field"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="day-row">
                            <CheckBox fx:id="thuCheck" text="Thursday"/>
                            <Label text="From:"/>
                            <TextField fx:id="thuStart" prefWidth="70" promptText="09:00" styleClass="time-field"/>
                            <Label text="To:"/>
                            <TextField fx:id="thuEnd" prefWidth="70" promptText="17:00" styleClass="time-field"/>
                        </HBox>

                        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="day-row">
                            <CheckBox fx:id="friCheck" text="Friday"/>
                            <Label text="From:"/>
                            <TextField fx:id="friStart" prefWidth="70" promptText="09:00" styleClass="time-field"/>
                            <Label text="To:"/>
                            <TextField fx:id="friEnd" prefWidth="70" promptText="17:00" styleClass="time-field"/>
                        </HBox>
                    </VBox>

                    <Button text="Next"
                            fx:id="nextButton"
                            onAction="#handleNextStep"
                            prefWidth="200"
                            styleClass="primary-button"/>
                </VBox>

                <VBox fx:id="Step2Container"
                      spacing="22"
                      maxWidth="480"
                      visible="false"
                      styleClass="card">

                    <HBox alignment="CENTER_LEFT" spacing="10">
                        <Label text="Add Your Clinic" styleClass="title"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Back"
                                fx:id="backButtonStep2"
                                onAction="#handleBackStep2"
                                styleClass="outline-button"/>
                    </HBox>

                    <Label text="Step 2: Clinic Information" styleClass="section-title"/>

                    <VBox spacing="10">
                        <Label text="Clinic Name" styleClass="field-label"/>
                        <TextField fx:id="nameField" promptText="Clinic Name" styleClass="text-field"/>

                        <Label text="Clinic Address" styleClass="field-label"/>
                        <HBox spacing="10">
                            <TextField fx:id="addressField"
                                       promptText="Nasr City, Cairo"
                                       styleClass="text-field"/>
                            <Button fx:id="openMapButton" text="ðŸ“" onAction="#handleOpenMap" styleClass="icon-button"/>

                        </HBox>

                        <Label fx:id="addressStatusLabel" styleClass="hint-text"/>

                        <Label text="Visit Price (EGP)" styleClass="field-label"/>
                        <TextField fx:id="priceField" promptText="e.g. 500" styleClass="text-field"/>
                    </VBox>

                    <Label text="Department" styleClass="field-label"/>
                    <ComboBox fx:id="departmentComboBox" prefWidth="300"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <CheckBox fx:id="enableConsultationCheck" text="Enable Consultation System"/>
                        <Label fx:id="consultationHintLabel" styleClass="hint-text" visible="false"/>
                    </HBox>

                    <HBox fx:id="consultationFieldsBox"
                          spacing="20"
                          visible="false"
                          managed="false">
                        <VBox>
                            <Label text="Consultation Price" styleClass="field-label"/>
                            <TextField fx:id="consultationPriceField" styleClass="text-field"/>
                        </VBox>
                        <VBox>
                            <Label text="Validity (Days)" styleClass="field-label"/>
                            <TextField fx:id="consultationValidityField" styleClass="text-field"/>
                        </VBox>
                    </HBox>

                    <Button text="Add Clinic"
                            fx:id="addClinicButton"
                            onAction="#handleAddClinic"
                            styleClass="primary-button"/>
                </VBox>

            </StackPane>
        </center>
    </BorderPane>
</ScrollPane>
