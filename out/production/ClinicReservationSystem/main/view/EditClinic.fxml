<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.EditClinicController"
      spacing="12"
      alignment="TOP_CENTER"
      style="-fx-padding: 16; -fx-background-color: #f0f4f3;">

    <!-- Ø§Ù„Ø¹Ù†ÙˆØ§Ù† -->
    <Label text="Edit Clinic Information"
           style="-fx-font-size: 18px;
                  -fx-font-weight: bold;
                  -fx-text-fill: #2d3748;" />

    <!-- Ù†Ù…ÙˆØ°Ø¬ Ø§Ù„ØªØ¹Ø¯ÙŠÙ„ (Ù…Ø¶ØºÙˆØ·) -->
    <VBox spacing="12" style="-fx-background-color: white;
                              -fx-border-radius: 12;
                              -fx-background-radius: 12;
                              -fx-padding: 16;
                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.06), 6, 0, 0, 1);">
        <GridPane hgap="10" vgap="12">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Clinic Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-text-fill: #4a5568;" />
            <TextField fx:id="clinicNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                       style="-fx-background-color: #f9fbfa;
                              -fx-border-color: #cbd5e0;
                              -fx-border-radius: 6;
                              -fx-background-radius: 6;
                              -fx-padding: 6 10;" />

            <Label text="Address:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-text-fill: #4a5568;" />
            <TextField fx:id="clinicAddressField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                       style="-fx-background-color: #f9fbfa;
                              -fx-border-color: #cbd5e0;
                              -fx-border-radius: 6;
                              -fx-background-radius: 6;
                              -fx-padding: 6 10;" />

            <Label text="Slot Duration (min):" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-text-fill: #4a5568;" />
            <TextField fx:id="slotDurationField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                       promptText="e.g. 20"
                       style="-fx-background-color: #f9fbfa;
                              -fx-border-color: #cbd5e0;
                              -fx-border-radius: 6;
                              -fx-background-radius: 6;
                              -fx-padding: 6 10;" />

            <Label text="Visit Price (EGP):" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-font-weight: bold; -fx-text-fill: #4a5568;" />
            <TextField fx:id="priceField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                       promptText="e.g. 150.00"
                       style="-fx-background-color: #f9fbfa;
                              -fx-border-color: #cbd5e0;
                              -fx-border-radius: 6;
                              -fx-background-radius: 6;
                              -fx-padding: 6 10;" />
        </GridPane>

        <!-- Consultation Toggle -->
        <CheckBox fx:id="enableConsultationCheckBox"
                  text="Enable Consultation System"
                  onAction="#onConsultationToggle"
                  style="-fx-font-weight: bold; -fx-text-fill: #2d3748;" />

        <!-- Consultation Fields (Ù…Ø¶ØºÙˆØ·) -->
        <VBox fx:id="consultationFieldsBox" visible="false" managed="false" spacing="8"
              style="-fx-background-color: #f0f9ff;
                     -fx-border-radius: 8;
                     -fx-background-radius: 8;
                     -fx-padding: 10;">
            <Label text="Consultation Price (EGP):"
                   style="-fx-font-weight: bold; -fx-text-fill: #2b6cb0; -fx-font-size: 13px;" />
            <TextField fx:id="consultationPriceField"
                       promptText="e.g. 100.00"
                       style="-fx-background-color: #edf7ff;
                              -fx-border-color: #bee3f8;
                              -fx-border-radius: 5;
                              -fx-background-radius: 5;
                              -fx-padding: 6 10;" />

            <Label text="Consultation Validity (Days):"
                   style="-fx-font-weight: bold; -fx-text-fill: #2b6cb0; -fx-font-size: 13px;" />
            <TextField fx:id="consultationDaysField"
                       promptText="e.g. 7"
                       style="-fx-background-color: #edf7ff;
                              -fx-border-color: #bee3f8;
                              -fx-border-radius: 5;
                              -fx-background-radius: 5;
                              -fx-padding: 6 10;" />

            <Label text="ðŸ’¡ Patients can book consultations within this period after a visit."
                   style="-fx-font-size: 10px;
                          -fx-text-fill: #718096;
                          -fx-wrap-text: true;" />
        </VBox>

        <!-- Working Hours -->
        <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 6 0 4 0;">
            <Label text="Working Hours"
                   style="-fx-font-weight: bold;
                          -fx-font-size: 14px;
                          -fx-text-fill: #2d3748;" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <ScrollPane fitToWidth="true" prefViewportHeight="180"
                    style="-fx-background-color: transparent;">
            <VBox fx:id="rulesContainer" spacing="8"
                  style="-fx-background-color: #f9fbfa;
                         -fx-border-radius: 8;
                         -fx-background-radius: 8;
                         -fx-padding: 10;" />
        </ScrollPane>
    </VBox>

    <!-- Ø£Ø²Ø±Ø§Ø± Ø§Ù„ØªØ­ÙƒÙ… (Ù…Ø¶ØºÙˆØ·Ø©) -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 12 0 0 0;">
        <Button text="Add Rule" onAction="#onAddRule"
                style="-fx-background-color: #e2e8f0;
                       -fx-text-fill: #4a5568;
                       -fx-font-size: 13px;
                       -fx-padding: 6 14;
                       -fx-background-radius: 18;
                       -fx-cursor: hand;" />

        <Region HBox.hgrow="ALWAYS" />

        <Button text="Cancel" onAction="#onCancel"
                style="-fx-background-color: #95a5a6;
                       -fx-text-fill: white;
                       -fx-font-size: 13px;
                       -fx-padding: 6 16;
                       -fx-background-radius: 18;
                       -fx-cursor: hand;" />

        <Button text="Save" onAction="#onSave"
                style="-fx-background-color: #15BF8F;
                       -fx-text-fill: white;
                       -fx-font-size: 13px;
                       -fx-padding: 6 16;
                       -fx-background-radius: 18;
                       -fx-cursor: hand;" />
    </HBox>

    <!-- Ø±Ø³Ø§Ù„Ø© Ø§Ù„Ø­Ø§Ù„Ø© -->
    <Label fx:id="statusLabel"
           style="-fx-font-size: 12px;
                  -fx-text-fill: #e53e3e;
                  -fx-padding: 4 0 0 0;" />

</VBox>