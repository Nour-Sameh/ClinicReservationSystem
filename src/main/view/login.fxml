<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane stylesheets="@login.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginController">

    <ImageView fitHeight="800" fitWidth="1550" opacity="0.50" preserveRatio="false">
        <Image url="@images/backgroundd.png" />
    </ImageView>
    <!-- Back Button -->
    <AnchorPane>
        <Button layoutY="81.0" onAction="#handleBack" prefHeight="48.0" prefWidth="126.0" styleClass="btn-back" text="← Back" AnchorPane.leftAnchor="25" AnchorPane.topAnchor="81.0" />
    </AnchorPane>

    <!-- CENTER CARD -->
    <VBox alignment="CENTER" maxHeight="600" maxWidth="420" spacing="18" styleClass="card">

        <!-- ICON -->
        <StackPane maxHeight="90" maxWidth="90" minHeight="90" minWidth="90" styleClass="icon-circle">
            <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                <Image url="@images/clinic logo.png" />
            </ImageView>
        </StackPane>

        <!-- TITLE -->
        <Label styleClass="title" text="Welcome Back" />

        <!-- SUBTITLE -->
        <Label styleClass="subtitle" text="Login to access your account" textAlignment="CENTER" wrapText="true" />

        <!-- FORM -->
        <VBox alignment="CENTER" spacing="14">

            <VBox alignment="CENTER_LEFT" spacing="6">
                <Label styleClass="field-label" text="Email" />
                <TextField fx:id="emailField" promptText="email or phone number" styleClass="input" />
            </VBox>

            <VBox alignment="CENTER_LEFT" spacing="6">
                <Label styleClass="field-label" text="Password" />
                <PasswordField fx:id="passwordField" promptText="••••••••" styleClass="input" />
            </VBox>

            <Button onAction="#handleLogin" prefHeight="48" prefWidth="360" styleClass="btn-primary" text="Login" />

            <HBox alignment="CENTER" spacing="5">
                <Label styleClass="hint-text" text="Forgot your password?" />
                <Button onAction="#handleForgotPassword" styleClass="link-btn" text="Reset" />
            </HBox>

            <HBox alignment="CENTER" spacing="5">
                <Label styleClass="hint-text" text="Don't have an account?" />
                <Button onAction="#handleRegister" styleClass="link-btn" text="Register here" />
            </HBox>

        </VBox>
    </VBox>

</StackPane>
