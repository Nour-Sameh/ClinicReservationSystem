<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="controller.LoginController"
           stylesheets="@login.css">

    <ImageView fitWidth="1550"
               fitHeight="800"
               preserveRatio="false"
               opacity="0.50">
        <Image url="@images/backgroundd.png"/>
    </ImageView>
    <!-- Back Button -->
    <AnchorPane>
        <Button text="← Back"
                onAction="#handleBack"
                styleClass="btn-back"
                AnchorPane.topAnchor="25"
                AnchorPane.leftAnchor="25"/>
    </AnchorPane>

    <!-- CENTER CARD -->
    <VBox alignment="CENTER"
          maxWidth="420"
          maxHeight="600"
          spacing="18"
          styleClass="card">

        <!-- ICON -->
        <StackPane styleClass="icon-circle"
                   minWidth="90"
                   minHeight="90"
                   maxWidth="90"
                   maxHeight="90">
            <ImageView fitWidth="60" fitHeight="60" preserveRatio="true">
                <Image url="@images/clinic logo.png"/>
            </ImageView>
        </StackPane>

        <!-- TITLE -->
        <Label text="Welcome Back"
               styleClass="title"/>

        <!-- SUBTITLE -->
        <Label text="Login to access your account"
               styleClass="subtitle"
               wrapText="true"
               textAlignment="CENTER"/>

        <!-- FORM -->
        <VBox spacing="14" alignment="CENTER">

            <VBox spacing="6" alignment="CENTER_LEFT">
                <Label text="Email" styleClass="field-label"/>
                <TextField fx:id="emailField"
                           promptText="email or phone number"
                           styleClass="input"/>
            </VBox>

            <VBox spacing="6" alignment="CENTER_LEFT">
                <Label text="Password" styleClass="field-label"/>
                <PasswordField fx:id="passwordField"
                               promptText="••••••••"
                               styleClass="input"/>
            </VBox>

            <Button text="Login"
                    prefWidth="360"
                    prefHeight="48"
                    styleClass="btn-primary"
                    onAction="#handleLogin"/>

            <HBox alignment="CENTER" spacing="5">
                <Label text="Forgot your password?"
                       styleClass="hint-text"/>
                <Button text="Reset"
                        onAction="#handleForgotPassword"
                        styleClass="link-btn"/>
            </HBox>

            <HBox alignment="CENTER" spacing="5">
                <Label text="Don't have an account?"
                       styleClass="hint-text"/>
                <Button text="Register here"
                        onAction="#handleRegister"
                        styleClass="link-btn"/>
            </HBox>

        </VBox>
    </VBox>

</StackPane>
