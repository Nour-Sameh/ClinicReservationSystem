<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<AnchorPane style="-fx-background-color: #f0f4f3;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DoctorController">
    <ImageView fitWidth="1550"
               fitHeight="800"
               preserveRatio="false"
               opacity="0.50">
    </ImageView>
    <!-- Top Green Header -->
    <HBox fx:id="headerBox"
          AnchorPane.topAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          prefHeight="60.0"
          style="-fx-background-color: linear-gradient(to right, #15BF8F, #0C7E5F);">
        <padding>
            <Insets bottom="10" left="20" right="20" top="10" />
        </padding>
        <Label fx:id="welcomeLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="Welcome, Dr. [Name]" />
        <Region HBox.hgrow="ALWAYS" />

        <!-- Logout Button -->
        <Button fx:id="logoutButton"
                onAction="#handleLogout"
                onMouseEntered="#hoverLogoutButton"
                onMouseExited="#resetLogoutButton"
                style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold; -fx-background-radius: 25; -fx-border-radius: 25; -fx-padding: 10 25; -fx-cursor: hand; -fx-border-color: white; -fx-border-width: 2;"
                text="Logout">
            <HBox.margin>
                <Insets right="10" />
            </HBox.margin>
        </Button>

        <Button fx:id="settingsButton" onAction="#handleSettings"
                onMouseEntered="#hoverSettingsButton"
                onMouseExited="#resetSettingsButton"
                style="-fx-background-color: white; -fx-text-fill: #0C7E5F; -fx-font-size: 20px; -fx-background-radius: 50; -fx-cursor: hand;"
                text="âš™" />
    </HBox>

    <!-- Navigation Bar -->
    <HBox fx:id="navBar"
          AnchorPane.topAnchor="65"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          prefHeight="73.0"
          spacing="20"
          alignment="CENTER"
          style="-fx-background-color: #F5FAF9; -fx-padding: 20; -fx-background-radius: 15;">

        <!-- Clinic Info -->
        <Button fx:id="ClinicInfoMainBox" onAction="#ClinicInfoBox" onMouseEntered="#hoverNavButton" onMouseExited="#resetNavButton" onMousePressed="#pressNavButton" onMouseReleased="#hoverNavButton"
                style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3); -fx-text-fill: #444; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #c8d6d5; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);"
                text="MyClinic" />

        <!-- Appointments -->
        <Button fx:id="appointmentsNavButton" onAction="#handleAppointments" onMouseEntered="#hoverNavButton" onMouseExited="#resetNavButton" onMousePressed="#pressNavButton" onMouseReleased="#hoverNavButton"
                style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3); -fx-text-fill: #444; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #c8d6d5; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);"
                text="Appointments" />

        <!-- Reviews -->
        <Button fx:id="reviewsNavButton" onAction="#handleReviews" onMouseEntered="#hoverNavButton" onMouseExited="#resetNavButton" onMousePressed="#pressNavButton" onMouseReleased="#hoverNavButton"
                style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3); -fx-text-fill: #444; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #c8d6d5; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);"
                text="Reviews" />

        <!-- Chat -->
        <Button fx:id="chatNavButton" onAction="#handleChat" onMouseEntered="#hoverNavButton" onMouseExited="#resetNavButton" onMousePressed="#pressNavButton" onMouseReleased="#hoverNavButton"
                style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3); -fx-text-fill: #444; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #c8d6d5; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);"
                text="Chat" />

        <!-- Report -->
        <Button fx:id="reportButton" onAction="#handleFullReport" onMouseEntered="#hoverNavButton" onMouseExited="#resetNavButton" onMousePressed="#pressNavButton" onMouseReleased="#hoverNavButton"
                style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3); -fx-text-fill: #444; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #c8d6d5; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);"
                text="Report" />

        <!-- Waiting List -->
        <Button fx:id="waitingListNavButton" onAction="#onWaitingListClicked" onMouseEntered="#hoverNavButton" onMouseExited="#resetNavButton" onMousePressed="#pressNavButton" onMouseReleased="#hoverNavButton"
                style="-fx-background-color: linear-gradient(to bottom, #ffffff, #e8f6f3); -fx-text-fill: #444; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-radius: 25; -fx-border-radius: 25; -fx-border-color: #c8d6d5; -fx-border-width: 1; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 6, 0.2, 0, 2);"
                text="Waiting List" />
    </HBox>

    <!-- Clinic Info ScrollPane -->
    <ScrollPane fx:id="mainClinicScrollPane"
                fitToWidth="true"
                hbarPolicy="NEVER"
                AnchorPane.topAnchor="150"
                AnchorPane.bottomAnchor="60"
                AnchorPane.leftAnchor="20"
                AnchorPane.rightAnchor="20">
        <content>
            <VBox fx:id="clinicInfoBox" spacing="20" style="-fx-background-color: white; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 15, 0, 0, 2);">
                <padding>
                    <Insets bottom="20" left="20" right="20" top="20" />
                </padding>

                <!-- Clinic Header: Name + Edit -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label fx:id="clinicNameLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" text="Clinic Name" />
                    <Region HBox.hgrow="ALWAYS" />
                    <Button fx:id="editButton" onAction="#handleEdit"
                            prefWidth="100"
                            prefHeight="40"
                            onMouseEntered="#hoverEditButton"
                            onMouseExited="#resetEditButton"
                            style="-fx-background-color: #e0f7fa; -fx-text-fill: #00796b;-fx-border-width: 1.5; -fx-font-size: 13px; -fx-padding: 5 15; -fx-border-radius: 20; -fx-cursor: hand; -fx-background-radius: 20;"
                            text="Edit" />
                </HBox>

                <!-- Specialty & Rating -->
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label fx:id="specialtyLabel" style="-fx-background-color: #e8f5e9; -fx-text-fill: #2e7d32; -fx-font-size: 14px; -fx-padding: 4 12; -fx-border-radius: 20; -fx-background-radius: 20;" text="Neurology" />
                    <HBox fx:id="starsContainer" alignment="CENTER_LEFT" spacing="3" />
                </HBox>

                <!-- Info -->
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #6c757d;" text="ðŸ“" />
                    <Label fx:id="addressLabel" style="-fx-font-size: 15px;" text="123 Host" />
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #6c757d;" text="â±ï¸" />
                    <Label fx:id="slotDurationLabel" style="-fx-font-size: 15px;" text="30 min slots" />
                </HBox>

                <!-- Price Label -->
                <HBox alignment="CENTER_LEFT" spacing="8">
                    <Label style="-fx-font-size: 16px; -fx-text-fill: #6c757d;" text="ðŸ’°" />
                    <Label fx:id="priceLabel" style="-fx-font-size: 15px;" text="Price: 0.00 EGP" />
                </HBox>

                <!-- Schedule -->
                <VBox spacing="6">
                    <HBox alignment="CENTER_LEFT" spacing="8">
                        <Label style="-fx-font-size: 16px; -fx-text-fill: #6c757d;" text="ðŸ“…" />
                        <Label style="-fx-font-weight: bold;" text="Working Hours" />
                    </HBox>
                    <VBox fx:id="scheduleText" spacing="8" style="-fx-padding: 10;">
                        <VBox.margin>
                            <Insets bottom="8" left="12" right="12" top="8" />
                        </VBox.margin>
                    </VBox>
                </VBox>
            </VBox>
        </content>
    </ScrollPane>

    <!-- Appointments Box -->
    <VBox fx:id="appointmentsBox"
          AnchorPane.topAnchor="150"
          AnchorPane.bottomAnchor="60"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          spacing="15"
          style="-fx-background-color: white; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);"
          visible="false">
        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="ðŸ“… Select Date:" />
            <DatePicker fx:id="appointmentsCalendar" onAction="#filterAppointmentsByDate" />
        </HBox>
        <ScrollPane fitToWidth="true" prefHeight="550" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
            <VBox fx:id="appointmentsList" spacing="12">
                <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
            </VBox>
        </ScrollPane>
        <HBox alignment="BOTTOM_RIGHT" spacing="10" VBox.vgrow="ALWAYS">
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="exportPDFButton" onAction="#handleExportPDF"
                    style="-fx-background-color: #15BF8F; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 6 14; -fx-background-radius: 6;"
                    text="Export as PDF ðŸ“„" />
            <Button fx:id="exportExcelButton" onAction="#handleExportExcel"
                    style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 6 14; -fx-background-radius: 6;"
                    text="Export Excel ðŸ“Š" />
        </HBox>
    </VBox>

    <!-- Reviews Box -->
    <VBox fx:id="reviewsBox"
          AnchorPane.topAnchor="150"
          AnchorPane.bottomAnchor="60"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          spacing="15"
          style="-fx-background-color: white; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);"
          visible="false">
        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #FF9800;" text="Reviews" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
            <VBox fx:id="reviewsList" spacing="12">
                <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
            </VBox>
        </ScrollPane>
    </VBox>

    <!-- Full Report Box -->
    <VBox fx:id="reportBox"
          AnchorPane.topAnchor="150"
          AnchorPane.bottomAnchor="60"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          spacing="15"
          style="-fx-background-color: white; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);"
          visible="false">
        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
            <VBox fx:id="reportContent" spacing="15" />
        </ScrollPane>
    </VBox>

    <!-- Waiting List Box -->
    <VBox fx:id="waitingListBox"
          AnchorPane.topAnchor="150"
          AnchorPane.bottomAnchor="60"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20"
          spacing="15"
          style="-fx-background-color: white; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);"
          visible="false">
        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #E67E22;" text="Waiting List â³" />
            <Region HBox.hgrow="ALWAYS" />
        </HBox>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS">
            <VBox fx:id="waitingListContainer" spacing="12">
                <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
            </VBox>
        </ScrollPane>
    </VBox>

    <!-- Settings Box - Scrollable -->
    <ScrollPane fx:id="settingsScrollPane"
                fitToWidth="true"
                prefHeight="585"
                maxHeight="800"
                hbarPolicy="NEVER"
                AnchorPane.topAnchor="150"
                AnchorPane.leftAnchor="100"
                AnchorPane.rightAnchor="100"
                visible="false"
                style="-fx-background-color: transparent; -fx-background: transparent;">
        <content>
            <VBox fx:id="settingsBox"
                  maxWidth="1300"
                  maxHeight="500"
                  spacing="20"
                  style="-fx-background-color: white; -fx-border-radius: 12; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0, 0, 3);"
                  alignment="TOP_CENTER">
                <padding><Insets bottom="30" left="40" right="40" top="30" /></padding>

                <!-- Header -->
                <HBox alignment="CENTER" spacing="10">
                    <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" text="âš™ Account Settings" />
                </HBox>

                <Separator />

                <!-- Account Information Section -->
                <VBox spacing="15" >
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #15BF8F;" text="Account Information" />

                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" minWidth="140" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="300" />
                        </columnConstraints>

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Username:" GridPane.rowIndex="0" />
                        <TextField fx:id="usernameField"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Email:" GridPane.rowIndex="1" />
                        <TextField fx:id="emailField" editable="false"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8; -fx-opacity: 0.8;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Phone:" GridPane.rowIndex="2" />
                        <TextField fx:id="phoneField" editable="false"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8; -fx-opacity: 0.8;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Gender:" GridPane.rowIndex="3" />
                        <TextField fx:id="genderField" editable="false"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8; -fx-opacity: 0.8;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="3" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Date of Birth:" GridPane.rowIndex="4" />
                        <TextField fx:id="dobField" editable="false"
                                   style="-fx-background-color: #f5f5f5; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8; -fx-opacity: 0.8;"
                                   GridPane.columnIndex="1" GridPane.rowIndex="4" />

                        <rowConstraints>
                            <RowConstraints minHeight="40" />
                            <RowConstraints minHeight="40" />
                            <RowConstraints minHeight="40" />
                            <RowConstraints minHeight="40" />
                            <RowConstraints minHeight="40" />
                        </rowConstraints>
                    </GridPane>
                </VBox>

                <Separator />

                <!-- Change Password Section -->
                <VBox spacing="15">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #15BF8F;" text="Change Password" />

                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" minWidth="140" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="300" />
                        </columnConstraints>

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Current Password:" GridPane.rowIndex="0" />
                        <PasswordField fx:id="currentPasswordField"
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="New Password:" GridPane.rowIndex="1" />
                        <PasswordField fx:id="newPasswordField"
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Confirm Password:" GridPane.rowIndex="2" />
                        <PasswordField fx:id="confirmPasswordField"
                                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #ddd; -fx-border-width: 1; -fx-padding: 8;"
                                       GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <rowConstraints>
                            <RowConstraints minHeight="40" />
                            <RowConstraints minHeight="40" />
                            <RowConstraints minHeight="40" />
                        </rowConstraints>
                    </GridPane>
                </VBox>

                <!-- Action Buttons -->
                <HBox alignment="CENTER" spacing="15">
                    <VBox.margin>
                        <Insets top="10" />
                    </VBox.margin>
                    <Button onAction="#handleSettingsCancel"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 30; -fx-background-radius: 8; -fx-cursor: hand;"
                            text="Cancel" />
                    <Button onAction="#handleSettingsSave"
                            style="-fx-background-color: #15BF8F; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10 30; -fx-background-radius: 8; -fx-cursor: hand;"
                            text="Save Changes" />
                </HBox>
            </VBox>
        </content>
    </ScrollPane>
</AnchorPane>