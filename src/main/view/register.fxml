<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.RegisterController">

    <!-- ✅ خلفية كـ ImageView مع opacity -->
    <ImageView fitWidth="600" fitHeight="700" preserveRatio="false" opacity="0.7">
        <Image url="@images/ha.jpg" />
    </ImageView>

    <children>
        <!-- Container مركزي -->
        <VBox alignment="CENTER" layoutX="68.0" layoutY="50" prefHeight="567.0" prefWidth="464.0" spacing="15">

            <!-- زر الرجوع (Back) -->
            <HBox alignment="CENTER_LEFT" prefWidth="400">
                <Button fx:id="backButton" onAction="#handleBack" prefHeight="30" prefWidth="96.0" style="-fx-background-color: white; -fx-border-color: #15BF8F; -fx-border-radius: 5;                                -fx-background-radius: 5; -fx-text-fill: #15BF8F; -fx-font-weight: bold;" text="← Back" />
            </HBox>

            <!-- اللوغو -->
            <ImageView fitHeight="120.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/images/clinic logo.png" />
                </image>
            </ImageView>

            <!-- العنوان -->
            <Text style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #222;" text="Create Account" />

            <!-- حقول الإدخال -->
            <TextField fx:id="fullNameField" prefHeight="40.0" prefWidth="464.0" promptText="Full Name" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;" />

            <TextField fx:id="emailField" prefHeight="42.0" prefWidth="464.0" promptText="Email" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;" />

            <TextField fx:id="phoneField" prefHeight="43.0" prefWidth="464.0" promptText="Phone" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;" />

            <PasswordField fx:id="passwordField" prefHeight="44.0" prefWidth="464.0" promptText="Password" style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;" />

            <!-- Gender & Date of Birth (في سطر واحد) -->
            <HBox alignment="CENTER" prefHeight="45.0" prefWidth="500.0" spacing="20">
                <!-- Gender -->
                <VBox alignment="CENTER_LEFT" prefWidth="160" spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Gender" />
                    <ComboBox fx:id="genderComboBox" prefHeight="24.0" prefWidth="195.0" promptText="Select gender" />
                </VBox>

                <!-- Date of Birth -->
                <VBox alignment="CENTER_LEFT" prefWidth="160" spacing="5">
                    <Label style="-fx-font-weight: bold;" text="Date of Birth" />
                    <DatePicker fx:id="dobPicker" prefWidth="150" promptText="Select date" />
                </VBox>
            </HBox>

            <!-- Role (Patient / Practitioner) -->
            <HBox alignment="CENTER" spacing="30">
                <CheckBox fx:id="patientCheck" text="Patient" />
                <CheckBox fx:id="doctorCheck" text="Practitioner" />
            </HBox>

            <!-- زر التسجيل -->
            <Button fx:id="registerButton" onAction="#handleRegister" onMouseEntered="#onHoverIn" onMouseExited="#onHoverOut" prefHeight="45" prefWidth="350" style="-fx-background-color: #15BF8F; -fx-background-radius: 25; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16;">
                <effect>
                    <DropShadow color="#888888" offsetX="0" offsetY="2" radius="5.0" />
                </effect>
                <text>Register</text>
            </Button>

            <!-- رابط Login -->
            <HBox alignment="CENTER" spacing="5">
                <Text style="-fx-fill: #777; -fx-font-size: 14px;" text="Already have an account?" />
                <Hyperlink fx:id="loginLink" onAction="#goToLogin" style="-fx-text-fill: #15BF8F; -fx-font-weight: bold; -fx-underline: true;" text="Login" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
