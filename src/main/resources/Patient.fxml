<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PatientController">

    <!-- Top Green Header -->
    <HBox layoutY="0" prefHeight="60.0" prefWidth="800.0" style="-fx-background-color: #15BF8F; -fx-padding: 10 20;">
        <Label fx:id="patientNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;          -fx-text-fill: white;" text="Welcome, Patient" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: #0C7E5F;          -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 5 15; -fx-border-radius: 20;" text="Logout" />
        <Button fx:id="settingsButton" onAction="#handleSettings" prefHeight="41.0" prefWidth="61.0"
                style="-fx-background-color: #15BF8F; -fx-text-fill: #555;
                 -fx-font-size: 16px; -fx-padding: 8 15; -fx-background-radius: 25;"
                text="âš™" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="38.0" />
         </font></Button>
    </HBox>

    <!-- ðŸŒŸ Navigation Bar -->
    <HBox alignment="CENTER" layoutX="190.0" layoutY="61.0" prefHeight="55.0" spacing="12" style="-fx-background-color: #F5FAF9; -fx-padding: 10;">

        <Button fx:id="searchNavButton" onAction="#handleNavigation" style="-fx-background-color: #15BF8F; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-weight: bold;                        -fx-padding: 6 20; -fx-background-radius: 25; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 8, 0.3, 0, 2);" text="Search" />

        <Button fx:id="appointmentsNavButton" onAction="#handleNavigation" style="-fx-background-color: white; -fx-text-fill: #444; -fx-font-size: 15px;                        -fx-padding: 6 20; -fx-background-radius: 25; -fx-border-color: #ddd; -fx-border-width: 1;                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 4, 0.2, 0, 1);" text="My Appointments" />

        <Button fx:id="waitingListNavButton" onAction="#handleNavigation" style="-fx-background-color: white; -fx-text-fill: #444; -fx-font-size: 15px;                        -fx-padding: 6 20; -fx-background-radius: 25; -fx-border-color: #ddd; -fx-border-width: 1;                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 4, 0.2, 0, 1);" text="Waiting List" />

        <Button fx:id="chatNavButton" onAction="#handleNavigation" style="-fx-background-color: white; -fx-text-fill: #444; -fx-font-size: 15px;                        -fx-padding: 6 20; -fx-background-radius: 25; -fx-border-color: #ddd; -fx-border-width: 1;                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.10), 4, 0.2, 0, 1);" text="Chat" />
    </HBox>

    <AnchorPane fx:id="mainContentPane" layoutX="20.0" layoutY="115.0" prefHeight="465.0" prefWidth="760.0">

        <VBox layoutX="0" layoutY="0" prefWidth="760.0" spacing="8">
            <Label style="-fx-font-size: 16px; -fx-text-fill: #333;" text="Search for clinics by specialty" />
            <ComboBox fx:id="specialtyCombo" prefWidth="200.0" promptText="All Specialties" />

            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="400.0">
                <VBox fx:id="clinicsContainer" alignment="TOP_CENTER" spacing="15" style="-fx-padding: 10;" />
            </ScrollPane>
        </VBox>

    </AnchorPane>
    <!-- Settings Box -->
    <VBox fx:id="settingsBox" layoutX="50" layoutY="150" prefHeight="400" prefWidth="550" spacing="15"
          style="-fx-background-color: white; -fx-border-radius: 12; -fx-background-radius: 12;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 8, 0, 0, 2);" visible="false">
        <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>

        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="âš™ï¸ Account Settings" />

        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Username:" GridPane.rowIndex="0" />
            <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Email:" GridPane.rowIndex="2" />
            <TextField fx:id="emailField" editable="false" opacity="0.7" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Phone:" GridPane.rowIndex="3" />
            <TextField fx:id="phoneField" editable="false" opacity="0.7" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Gender:" GridPane.rowIndex="4" />
            <TextField fx:id="genderField" editable="false" opacity="0.7" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Label text="Date of Birth:" GridPane.rowIndex="5" />
            <TextField fx:id="dobField" editable="false" opacity="0.7" GridPane.columnIndex="1" GridPane.rowIndex="5" />

            <Label style="-fx-font-weight: bold;" text="Change Password:" GridPane.columnSpan="2" GridPane.rowIndex="6" />

            <Label text="Current Password:" GridPane.rowIndex="7" />
            <PasswordField fx:id="currentPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

            <Label text="New Password:" GridPane.rowIndex="8" />
            <PasswordField fx:id="newPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="8" />

            <Label text="Confirm Password:" GridPane.rowIndex="9" />
            <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="9" />
        </GridPane>

        <HBox alignment="CENTER_RIGHT" spacing="10" VBox.vgrow="ALWAYS">
            <Button onAction="#handleSettingsCancel" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 5 15;" text="Cancel" />
            <Button onAction="#handleSettingsSave" style="-fx-background-color: #15BF8F; -fx-text-fill: white; -fx-padding: 5 15;" text="Save Changes" />
        </HBox>
    </VBox>

</AnchorPane>
